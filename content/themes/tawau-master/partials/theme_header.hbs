<header>
	<div class="header-container">
		<div class="container">
			<a class="blog-logo" href="{{@blog.url}}" title="{{@blog.title}}">
				{{#if @blog.logo}} <img src="{{@blog.logo}}" alt="{{@blog.title}}" /> {{else}} <b>{{@blog.title}}</b> {{/if}} 
			</a>
			{{navigation}}
		</div>
	</div>
	{{!-- This is the search container - visible after a user clicks the search button --}}

	<div id="morphing">
		<svg width="100%" height="100%" viewBox="0 0 10 10" preserveAspectRatio="none" style="position: absolute; top: 0; left: 0; pointer-events: none;" xmlns:xlink="http://www.w3.org/1999/xlink"><path class="path" fill="#FFF100" d="M 10,0 L 10,0 C 10,0 10,0 5,0 C 0,0 0,0 0,0 L 0,0 Z"></path></svg>
	</div>

	<div class="search-container">
		<form>
			<input id="search-field" placeholder="{{t "Search"}}" autocomplete="off"/>
		</form>
		<ul id="results" data-no-results="{{t "No posts found"}}"></ul>
	</div>
</header>